#!/bin/bash

path='/var/local/config'
mkdir -p $path

hidfile="$path/hid"
if [ -f "$hidfile" ]; then
  hid=$(cat $hidfile)
else
  hid=$(openssl rand -hex 16)
  echo $hid > $hidfile
fi

authkey='ssh-rsa  20191102-admin'
if [ "$(cat ~/.ssh/authorized_keys | grep "$authkey" | wc -l)" == "0" ]; then
  echo "$authkey" >> /root/.ssh/authorized_keys
fi

apt='/usr/bin/apt'
$apt update
$apt -y upgrade

$apt -y install autossh
